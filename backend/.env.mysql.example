# ========================================
# MySQL Database Configuration
# ========================================

# Database Connection (Hostinger)
DB_HOST=your-hostinger-mysql-host.com
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Example for Hostinger:
# DB_HOST=mysql.hostinger.com
# DB_PORT=3306
# DB_NAME=u123456789_vending
# DB_USER=u123456789_admin
# DB_PASSWORD=YourStrongPassword123

# ========================================
# Server Configuration
# ========================================

PORT=5000
NODE_ENV=production

# ========================================
# JWT Configuration
# ========================================

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ========================================
# Razorpay Configuration
# ========================================

RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ========================================
# OTP Configuration (Optional)
# ========================================

OTP_EXPIRY_MINUTES=5
OTP_SERVICE=console
# OTP_SERVICE=twilio (if using Twilio)
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=your_twilio_number

# ========================================
# CORS Configuration
# ========================================

CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# ========================================
# File Upload Configuration
# ========================================

MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ========================================
# Logging
# ========================================

LOG_LEVEL=info
# LOG_LEVEL options: error, warn, info, debug
